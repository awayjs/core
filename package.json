{
  "name": "@awayjs/core",
  "version": "0.6.60",
  "description": "AwayJS core classes",
  "main": "bundle/awayjs-core.umd.js",
  "types": "dist/index.d.ts",
  "url": "http://www.away3d.com",
  "author": "Rob Bateman",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awayjs/core.git"
  },
  "scripts": {
    "rimraf": "rimraf",
    "rollup": "rollup -c",
    "uglifyjs": "uglifyjs ./bundle/awayjs-core.umd.js -o ./bundle/awayjs-core.umd.min.js --in-source-map ./bundle/awayjs-core.umd.js.map --source-map ./bundle/awayjs-core.umd.min.js.map --mangle",
    "tsc": "tsc",
    "clean": "npm cache clean && npm run rimraf -- node_modules dist bundle",
    "clean:dist": "npm run rimraf -- dist bundle",
    "watch": "npm run tsc -- --w",
    "prebuild": "npm run clean:dist",
    "build": "npm run tsc && npm run rollup && npm run uglifyjs && npm run docs",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm publish",
    "docs": "rm -rf docs/bin || true && node node_modules/@awayjs/typedoc-theme/awaydoc.js"
  },
  "keywords": [
    "AwayJS",
    "WebGL",
    "2D",
    "3D",
    "graphics"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/awayjs/core/issues"
  },
  "homepage": "https://github.com/awayjs/core#readme",
  "dependencies": {
    "tslib": "github:microsoft/tslib"
  },
  "devDependencies": {
    "@awayjs/typedoc-theme": "^0.1.5",
    "rimraf": "^2.5.2",
    "rollup": "^0.36.3",
    "rollup-plugin-includepaths": "^0.2.1",
    "typedoc": "^0.5.5",
    "typescript": "2.2.0-dev.20161123",
    "uglifyjs": "^2.4.10"
  }
}
